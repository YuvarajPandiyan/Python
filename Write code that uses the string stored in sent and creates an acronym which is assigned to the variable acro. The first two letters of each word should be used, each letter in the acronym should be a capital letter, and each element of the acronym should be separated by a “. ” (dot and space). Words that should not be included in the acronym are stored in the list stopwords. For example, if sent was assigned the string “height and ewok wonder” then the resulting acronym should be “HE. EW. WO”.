stopwords = ['to', 'a', 'for', 'by', 'an', 'am', 'the', 'so', 'it', 'and', 'The']
sent = "The water earth and air are vital"
aco=sent.split(" ")
v=""
acro=""
for i in aco:
    if i not in stopwords:
        a = i[0:2]
        a = a.upper()
        print(a)
        v+=". " + a
v =  list(v)
print(v)
v.remove(".")
v.remove(" ")
print(v)
for q in v:
    acro += q
print(acro)

